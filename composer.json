{
    "name": "fredbradley/easytime",
    "description": "A small class based package to help with human readable calculations of time.",
    "license": "MIT",
    "authors": [
        {
            "name": "Fred Bradley",
            "email": "code@fredbradley.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.83",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "phpcs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "autoload": {
        "psr-4": {
            "FredBradley\\EasyTime\\": "src"
        }
    },
    "autoload-dev": {
        "FredBradley\\EasyTime\\Tests\\": "tests"
    }
}

